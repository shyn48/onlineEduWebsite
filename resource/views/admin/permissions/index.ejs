<div
  class="d-flex justify-content-between align-items-center mb-3 border-bottom-1"
>
  <h2>لیست اجازه دسترسی</h2>
  <div class="btn-group">
    <a href="/admin/users/permissions/create" class="btn btn-sm btn-danger"
      >افزودن اجازه دسترسی جدید</a
    >
    <a href="/admin/users/roles" class="btn btn-sm btn-danger">سطوح دسترسی</a>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>عنوان اجازه</th>
        <th>نوع اجازه</th>
        <th>تنظیمات</th>
      </tr>
    </thead>
    <tbody>
      <% permissions.docs.forEach(permission => { %>
      <tr>
        <td><a href="#"><%= permission.name %></a></td>
        <td><%= permission.label %></td>
        <td>
          <form
            action="/admin/users/permissions/<%=permission._id %>?_method=DELETE"
            method="post"
          >
            <input type="hidden" name="_method" value="delete" />
            <div class="btn-group btn-group-sm">
              <a
                href="/admin/users/permissions/<%=permission._id %>/edit"
                class="btn btn-primary"
                >ویرایش</a
              >
              <button type="submit" class="btn btn-danger">حذف</button>
            </div>
          </form>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>

  <%- include(viewPath('layouts/pagination'), { pagination : permissions }) %>
</div>
